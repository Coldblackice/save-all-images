<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://saveimages/content/SI_css.css"?>

<!DOCTYPE window SYSTEM "chrome://saveimages/locale/saveimages.dtd">

<prefwindow
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" 
	id="SIdlgOptions"
	title="&optionsTitle;"
	persist="lastSelected screenX screenY width"
	onload="SIprefs.load();"
	style="min-width: 630px; min-height: 550px; height: auto;"
	type="prefwindow"
	buttons="cancel,accept,extra2"
	buttonlabelextra2="&buttonlabelextra2;"
	ondialogaccept="return SIprefs.doOk();"
	ondialogcancel="return SIprefs.docancel();"
	ondialogextra2="SIprefs.restoreAll();"
	>

	<prefpane id="paneFilters" label="&paneFiltersLbl;" src="chrome://saveimages/content/preferences/paneFilters.xul" />
	<prefpane id="paneSave" label="&paneSaveLbl;" src="chrome://saveimages/content/preferences/paneSave.xul" />
	<prefpane id="paneGeneral" label="&paneGeneralLbl;" src="chrome://saveimages/content/preferences/paneGeneral.xul" />
	<prefpane id="paneShortcuts" label="&paneShortcutsLbl;" src="chrome://saveimages/content/preferences/paneShortcuts.xul" />
	<prefpane id="paneMenuItems" label="&paneMenuItemsLbl;" src="chrome://saveimages/content/preferences/paneMenuItems.xul" />
	
	<!--there must be nothing before prefpane else causes strange behaviour-->
	<script type="application/x-javascript" src="chrome://saveimages/content/SICommon.js"/>
	<script type="application/x-javascript" src="chrome://saveimages/content/preferences/SIOptions.js"/>
  
  <stringbundleset>
		<stringbundle id="SI_platformKeys" src="chrome://global-platform/locale/platformKeys.properties"/>
		<stringbundle id="SI_localeKeys" src="chrome://global/locale/keys.properties"/>
		<stringbundle id="SI_optionStrs" src="chrome://saveimages/locale/options.properties"/>
  </stringbundleset>
  
  <hbox>
  	<button id="idbtnExport" label="&btnExportLbl;" tooltiptext="&btnExportTooltip;" oncommand="SIprefs.exportOptions();"/>
  	<button id="idbtnImport" label="&btnImportLbl;" tooltiptext="&btnImportTooltip;" oncommand="SIprefs.importOptions();"/>
  </hbox>

</prefwindow>